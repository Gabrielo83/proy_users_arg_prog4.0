<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=titleUser %></title>
    <%- include("partials/head") %>
  </head>
  <body>
    <%- include("partials/navBar") %>
    <div class="container">
      <a href="/createUser" class="btn btn-outline-primary mt-4"
        ><i class="bx bxs-plus-circle bx-lg"></i
      ></a>
      <a href="/" class="btn btn-outline-success mt-4"
        ><i class="bx bxs-home-alt-2 bx-lg"></i
      ></a>
      <table
        class="table table-info table-bordered table-striped text-center mt-4"
      >
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Usuario</th>
            <th scope="col">Email</th>
            <th scope="col">Imagen</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach((users)=>{ %>
          <tr>
            <td class="fs-4 align-middle"><%= users.id %></td>
            <td class="fs-4 align-middle"><%= users.firstName %></td>
            <td class="fs-4 align-middle"><%= users.email %></td>
            <td>
              <div class="card" style="width: 4rem">
                <img src="<%= users.image %>" class="card-img-top" alt="..." />
              </div>
            </td>
            <td class="align-middle">
              <a href="/editUser/<%= users.id %>" class="btn btn-success"
                ><i class="bx bxs-edit-alt bx-sm"></i
              ></a>
              <!-- <a
                href="/deleteUser/<%= users.id %>"
                class="btn btn-danger"
                onclick="return confirm('Esta seguro de eliminar al usuario: <%= users.firstName %>')"
                ><i class="bx bxs-trash bx-sm"></i
              ></a> -->
              <a class="btn btn-danger" onclick="confirmar('<%= users.id %>')"
                ><i class="bx bxs-trash bx-sm"></i
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <%- include("partials/footer") %>
    <script src="/js/funciones.js"></script>
  </body>
</html>
